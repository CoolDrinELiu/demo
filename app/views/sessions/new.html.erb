<h1>Sign in</h1>
<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <%= form_for :session, url: sessions_path, method: :post do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email, value: cookies[:email] %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <div style="height:28px;">
          <%= f.label :remember_me %>
          <%= f.check_box :remember_me, style: "position:relative;top:3px;" %>
        </div>
        <div style="text-align: center;">
        <%= f.submit "Click me to log in" , class: "btn-sm btn-primary", style: "width: 150px;" %>
        </div>
    <% end %>
  </div>
</div>
